@model IEnumerable<DLSmartAppraisal.Model.TestResult>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Test Results";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/testresults.css" />

<div class="results-container">
    <div class="glass-card">
        <div class="card-header">
            <h2><i class="bi bi-bar-chart-line"></i> Test Results</h2>
        </div>

        <table class="table-grid">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.UserId)</th>
                    <th>@Html.DisplayNameFor(model => model.AssessmentId)</th>
                    <th>@Html.DisplayNameFor(model => model.Score)</th>
                    <th>@Html.DisplayNameFor(model => model.TotalQuestions)</th>
                    <th>@Html.DisplayNameFor(model => model.Hike)</th>
                    <th>@Html.DisplayNameFor(model => model.TakenOn)</th>
                    @* <th>Actions</th> *@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                        <td>@Html.DisplayFor(modelItem => item.AssessmentId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Score)</td>
                        <td>@Html.DisplayFor(modelItem => item.TotalQuestions)</td>
                        <td>@Html.DisplayFor(modelItem => item.Hike)</td>
                        <td>@Html.DisplayFor(modelItem => item.TakenOn)</td>
                        @* <td>
                            <a href="@Url.Action("Details", new { id = item.Id })" class="gradient-btn">Details</a>
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn-outline-light">Delete</a>
                        </td> *@
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "Home")" class="btn-outline-light">
                <i class="bi bi-house-door"></i> Back to Home
            </a>
        </div>
    </div>
</div>
