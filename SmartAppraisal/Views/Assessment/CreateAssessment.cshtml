@model DLSmartAppraisal.Model.AssessmentDetails

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Assessment";
}

<link rel="stylesheet" href="~/css/createAssessment.css" />

<div class="create-assessment-wrapper">
    <div class="create-assessment-card">
        <h3 class="form-title">Create Assessment</h3>

        <form asp-action="CreateAssessment" method="post" autocomplete="off" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter assessment name" autocomplete="off" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DateOfAssessment" class="form-label"></label>
                <input asp-for="DateOfAssessment" type="date" class="form-control" autocomplete="off" />
                <span asp-validation-for="DateOfAssessment" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Designation" class="form-label">Designation</label>
                <select asp-for="Designation" asp-items="ViewBag.DesigList" class="form-select">
                    <option value="">-- Select Designation --</option>
                </select>
                <span asp-validation-for="Designation" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="CompId" class="form-label">Competency</label>
                <select asp-for="CompId" asp-items="ViewBag.CompetencyList" class="form-select">
                    <option value="">-- Select Competency --</option>
                </select>
                <span asp-validation-for="CompId" class="text-danger"></span>
            </div>

            <div class="form-check mb-4">
                <input class="form-check-input" asp-for="IsActive" />
                <label class="form-check-label" asp-for="IsActive"></label>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Assessments" class="btn btn-outline-light">Back</a>
                <button type="submit" class="btn btn-gradient">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
