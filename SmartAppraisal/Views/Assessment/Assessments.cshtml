@model IEnumerable<DLSmartAppraisal.Model.AssessmentDetails>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Assessments";
}

<link rel="stylesheet" href="~/css/assessment.css" />

<div class="container mt-4 assessment-container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Assessments</h3>
        @if (Context.Session.GetString("curRole") == "Admin")
        {
            <a asp-action="CreateAssessment" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Create New
            </a>
        }
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="text-center">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Designation</th>
                    <th>Competency</th>
                    <th>Active</th>
                    <th>Created By</th>
                    <th>Created On</th>
                    <th>Updated By</th>
                    <th>Updated On</th>
                    @if (Context.Session.GetString("curRole") == "Admin")
                    {
                        <th>Action</th>
                    }
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AssesmentId</td>
                        <td>@item.Name</td>
                        <td>@item.DateOfAssessment.ToString("dd MMM yyyy")</td>
                        <td>@item.Designation</td>
                        <td>@item.CompId</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                        <td>@item.CreatedBy</td>
                        <td>@item.CreatedOn.ToString("dd MMM yyyy")</td>
                        <td>@item.UpdatedBy</td>
                        <td>@item.UpdatedOn?.ToString("dd MMM yyyy")</td>
                        @if (Context.Session.GetString("curRole") == "Admin")
                        {
                          <td>
                             <a asp-action="UpdateAssessment" asp-route-id="@item.AssesmentId" class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                              </a>
                            </td>
                        }  
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
