@model DLSmartAppraisal.Model.TestQuestionViewModel

@{
    Layout = null;
    bool isLastQuestion = (ViewBag.CurrentIndex + 1) == ViewBag.TotalQuestions;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    /* ===== Background ===== */
    body {
        background: linear-gradient(135deg, #2d3436, #1e272e);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #f1f1f1;
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .container {
        width: 90%;
        max-width: 750px;
    }

    /* ===== Header Bar ===== */
    .header-bar {
        background: #2f3640;
        border-radius: 0.75rem;
        padding: 15px 25px;
        margin-bottom: 25px;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.3);
    }

        .header-bar h5 {
            color: #00a8ff;
            margin: 0;
            font-weight: 600;
        }

    /* ===== Question Card ===== */
    .question-card {
        background: #2f3640;
        border: none;
        border-radius: 1rem;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.4);
        color: #f1f1f1;
        transition: 0.3s ease;
    }

        .question-card:hover {
            transform: translateY(-2px);
        }

    .question-number {
        font-size: 0.95rem;
        font-weight: 600;
        color: #a5b1c2;
    }

    .question-text {
        font-size: 1.25rem;
        font-weight: 600;
        color: #f5f6fa;
        line-height: 1.6;
    }

    /* ===== Options ===== */
    .form-check {
        background: #3a3a3a;
        padding: 12px 15px;
        border-radius: 10px;
        transition: all 0.2s ease-in-out;
        border: 2px solid transparent;
    }

        .form-check:hover {
            background: #484848;
            border-color: #00a8ff33;
        }

    .form-check-input {
        transform: scale(1.2);
        margin-right: 10px;
        accent-color: #00a8ff;
    }

    .form-check-label {
        font-size: 1rem;
        color: #dcdde1;
        cursor: pointer;
    }

    .form-check-input:checked + .form-check-label {
        color: #00a8ff;
        font-weight: 600;
    }

    /* ===== Buttons ===== */
    .btn {
        border-radius: 8px;
        font-weight: 500;
        padding: 10px 24px;
        transition: 0.2s ease-in-out;
    }

    .btn-primary {
        background-color: #0097e6;
        border: none;
    }

        .btn-primary:hover {
            background-color: #00a8ff;
            transform: translateY(-1px);
        }

    .btn-success {
        background-color: #44bd32;
        border: none;
    }

        .btn-success:hover {
            background-color: #4cd137;
            transform: translateY(-1px);
        }

    .btn-danger {
        background-color: #e84118;
        border: none;
    }

        .btn-danger:hover {
            background-color: #ff4d4d;
            transform: translateY(-1px);
        }
</style>

<div class="container">

    <div class="d-flex justify-content-between align-items-center header-bar">
        <h5><i class="bi bi-journal-text me-2"></i>Smart Appraisal - Test</h5>

        <form asp-action="SubmitTest" method="post" id="submitTestForm" class="m-0">
            <input type="hidden" name="questionId" value="@Model.QuestionId" />
            <input type="hidden" name="selectedOption" id="selectedOptionSubmit" />
            <button type="submit" class="btn btn-danger fw-semibold">
                <i class="bi bi-box-arrow-right me-1"></i> Submit Test
            </button>
        </form>
    </div>

    <div class="card question-card">
        <div class="card-body p-5">
            <div class="question-number mb-3">
                Question @(@ViewBag.CurrentIndex + 1) of @ViewBag.TotalQuestions
            </div>

            <div class="question-text mb-4">
                @Model.QuestionText
            </div>

            <form method="post" asp-action="SubmitAnswer" class="mt-3">
                <input type="hidden" name="questionId" value="@Model.QuestionId" />

                <div class="form-check mb-3">
                    <input class="form-check-input" type="radio" name="selectedOption" value="1" id="opt1" required>
                    <label class="form-check-label" for="opt1">@Model.Option1</label>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="radio" name="selectedOption" value="2" id="opt2">
                    <label class="form-check-label" for="opt2">@Model.Option2</label>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="radio" name="selectedOption" value="3" id="opt3">
                    <label class="form-check-label" for="opt3">@Model.Option3</label>
                </div>

                <div class="form-check mb-4">
                    <input class="form-check-input" type="radio" name="selectedOption" value="4" id="opt4">
                    <label class="form-check-label" for="opt4">@Model.Option4</label>
                </div>

                <div class="d-flex justify-content-end">
                    @if (!isLastQuestion)
                    {
                        <button type="submit" class="btn btn-primary">
                            Next <i class="bi bi-arrow-right-short ms-1"></i>
                        </button>
                    }
                    else
                    {
                        <button type="button" id="finalSubmitBtn" class="btn btn-success">
                            <i class="bi bi-check2-circle me-1"></i> Submit Test
                        </button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    const submitForm = document.getElementById("submitTestForm");

    submitForm.addEventListener("submit", function (event) {
        event.preventDefault();
        handleSubmitConfirmation(submitForm);
    });

    const finalSubmitBtn = document.getElementById("finalSubmitBtn");
    if (finalSubmitBtn) {
        finalSubmitBtn.addEventListener("click", function () {
            handleSubmitConfirmation(submitForm);
        });
    }

    function handleSubmitConfirmation(form) {
        const selected = document.querySelector('input[name="selectedOption"]:checked');
        if (selected) {
            document.getElementById('selectedOptionSubmit').value = selected.value;
        }

        Swal.fire({
            title: "Submit Test?",
            text: "Are you sure you want to submit the test? Once submitted, you cannot change your answers.",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#28a745",
            cancelButtonColor: "#6c757d",
            confirmButtonText: "Yes, Submit Test",
            cancelButtonText: "Cancel"
        }).then((result) => {
            if (result.isConfirmed) {
                form.submit();
            }
        });
    }
</script>
