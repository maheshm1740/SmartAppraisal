@model DLSmartAppraisal.Model.CandidateMappingViewModel
@{
    ViewData["Title"] = "Map Candidates";
    Layout = "_Layout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    /* ===== Page Background ===== */
    body {
        background: linear-gradient(135deg, #2d3436, #1e272e);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #f1f1f1;
        margin: 0;
        padding: 0;
        height: 100vh;
        overflow: hidden; /* Prevent scrolling */
        display: flex;
        justify-content: center; /* Horizontally center */
        align-items: center; /* Vertically center */
    }

    /* ===== Card Container ===== */
    .card {
        background: rgba(47, 54, 64, 0.95);
        border: none;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.5);
        width: 90%;
        max-width: 750px;
        padding: 25px;
        margin: auto; /* Extra safety centering */
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .card-header {
        background: transparent;
        text-align: center;
        border-bottom: 1px solid #444;
        padding-bottom: 15px;
    }

        .card-header h4 {
            color: #ffffff;
            font-weight: 600;
            margin: 0;
            letter-spacing: 0.5px;
        }

    /* ===== Form ===== */
    .form-label {
        color: #cccccc;
        font-weight: 500;
        margin-bottom: 6px;
    }

    .form-select,
    .form-control {
        background-color: #d9d9d9;
        border: 1px solid #aaa;
        color: #000;
        border-radius: 6px;
        transition: all 0.2s ease;
        height: 40px;
    }

        .form-select:focus,
        .form-control:focus {
            border-color: #666;
            box-shadow: 0 0 5px rgba(255, 255, 255, 0.2);
        }

    /* ===== Candidate List ===== */
    .candidate-box {
        background-color: #d9d9d9;
        color: #000;
        border: 1px solid #aaa;
        border-radius: 8px;
        padding: 12px;
        height: 200px; /* Fixed height to avoid scroll */
        overflow-y: auto;
    }

    .form-check {
        margin-bottom: 10px;
    }

    .form-check-label {
        color: #000;
    }

    /* ===== Buttons ===== */
    .btn {
        border-radius: 6px;
        padding: 10px 25px;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .btn-primary {
        background-color: #4e73df;
        border: none;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #3b5dc9;
            transform: translateY(-1px);
        }

    .btn-outline-light {
        background-color: transparent;
        border: 1px solid #ccc;
        color: #fff;
    }

        .btn-outline-light:hover {
            background-color: #444;
            border-color: #fff;
        }

    /* ===== Alerts ===== */
    .alert {
        border-radius: 8px;
        font-weight: 500;
    }

    .alert-success {
        background-color: #263d2a;
        color: #9de89d;
        border: 1px solid #3c7a3c;
    }

    .alert-danger {
        background-color: #3d2626;
        color: #ffb3b3;
        border: 1px solid #a33a3a;
    }
</style>

<div class="card">
    <div class="card-header">
        <h4><i class="bi bi-people-fill me-2"></i>Map Candidates to Assessment</h4>
    </div>

    <div class="card-body">
        <form asp-action="MapCandidates" method="post">
            <!-- Assessment Dropdown -->
            <div class="row mb-4 justify-content-center">
                <div class="col-md-8">
                    <label asp-for="AssessmentId" class="form-label">Select Assessment</label>
                    <select asp-for="AssessmentId" asp-items="ViewBag.Assessments" class="form-select">
                        <option value="">-- Select Assessment --</option>
                    </select>
                    <span asp-validation-for="AssessmentId" class="text-danger small"></span>
                </div>
            </div>

            <!-- Candidate List -->
            <div class="mb-4">
                <label class="form-label">Select Candidates <span class="text-muted small">(Uncheck to exclude)</span></label>
                <div class="candidate-box">
                    @if (Model.Candidates != null && Model.Candidates.Any())
                    {
                        @for (int i = 0; i < Model.Candidates.Count; i++)
                        {
                            <div class="form-check">
                                <input type="checkbox" asp-for="@Model.Candidates[i].IsSelected" class="form-check-input" />
                                <label class="form-check-label">@Model.Candidates[i].Name</label>
                                <input type="hidden" asp-for="@Model.Candidates[i].UserId" />
                                <input type="hidden" asp-for="@Model.Candidates[i].Name" />
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center my-3">No candidates found.</p>
                    }
                </div>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between mt-3">
                <a asp-controller = "Home" asp-action="Index" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left-circle me-1"></i>Cancel
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i>Save Mapping
                </button>
            </div>
        </form>

        <!-- Alerts -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success mt-4 text-center shadow-sm">
                <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger mt-4 text-center shadow-sm">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            </div>
        }
    </div>
</div>
