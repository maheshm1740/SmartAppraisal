@model DLSmartAppraisal.Model.AssessmentDetails

@{
    Layout = null;
    ViewData["Title"] = "Assessment Instructions";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    /* ===== Page Background ===== */
    body {
        background: linear-gradient(135deg, #2d3436, #1e272e);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #f1f1f1;
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* ===== Card Styling ===== */
    .card {
        background: #2f3640;
        color: #f1f1f1;
        border: none;
        border-radius: 1rem;
        width: 100%;
        max-width: 650px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
    }

        .card h2 {
            color: #00a8ff;
            font-weight: 600;
        }

        .card hr {
            border-top: 1px solid #444;
        }

        .card ul li {
            margin-bottom: 8px;
            line-height: 1.6;
        }

    /* ===== Date Text Styling ===== */
    .assessment-date {
        color: #dcdde1; /* light gray for visibility */
        font-size: 0.95rem;
    }

    /* ===== Alert Styling ===== */
    .alert-info {
        background-color: #273c75;
        color: #dcdde1;
        border: none;
    }

    /* ===== Button Styling ===== */
    .btn-primary {
        background-color: #0097e6;
        border: none;
        font-weight: 500;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #00a8ff;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background-color: #718093;
        border: none;
        font-weight: 500;
        transition: 0.3s;
    }

        .btn-secondary:hover {
            background-color: #a4b0be;
            transform: translateY(-2px);
        }
</style>

<div class="card shadow-sm p-4 rounded-3 text-center">
    <h2 class="mb-3">@Model.Name - Instructions</h2>

    <p class="assessment-date mb-3">
        <strong>Date of Assessment:</strong> @Model.DateOfAssessment.ToString("dd MMM yyyy")
    </p>

    <hr />

    <h5 class="text-info">Please read the following instructions carefully before starting your assessment:</h5>
    <ul class="mt-3 text-start mx-auto" style="max-width: 90%;">
        <li>This assessment contains <strong>multiple choice questions</strong> related to your selected competency.</li>
        <li>You will have to answer all the questions sequentially — no skipping or returning to previous questions.</li>
        <li>Each question carries <strong>1 mark</strong>.</li>
        <li>There is <strong>no negative marking</strong>.</li>
        <li>Do not refresh or close the browser tab during the test.</li>
        <li>The assessment is monitored and will automatically be submitted once all questions are answered.</li>
    </ul>

    <div class="alert alert-info mt-4">
        <strong>Note:</strong> Once you click <em>Proceed to Assessment</em>, your timer (if applicable) will start.
    </div>

    <form method="post" asp-action="StartTest" class="text-center mt-4">
        <input type="hidden" name="assessmentId" value="@Model.AssesmentId" />
        <div class="d-flex justify-content-center gap-3">
            <a href="/Home/Index" class="btn btn-secondary btn-lg px-4">
                Take it Later
            </a>
            <button type="submit" class="btn btn-primary btn-lg px-4">
                Proceed to Assessment
            </button>
        </div>
    </form>
</div>
